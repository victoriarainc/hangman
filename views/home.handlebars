<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dirty Hangman</title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <h1>Dirty Hangman</h1>
    <div id="phrase">
      {{ maskedPhrase }}
    </div>
    {{#if game.finished }}
      {{#if game.winner }}
        <h1>You Win!</h1>
      {{/if}}
      {{^if game.winner }}
        <h1>You Lose!</h1>
      {{/if}}
      <a href="/reset">Play again?</a>
    {{/if}}

    {{^if game.finished }}
    <form id="inputForm" action="/guess" method="POST">
      <input id="inputField" type="text" name="userGuess" value="" />
      <p id ="error">{{error}}</p>
      <input id="button" type="submit" value="Make a guess!" />
    </form>
    {{/if}}
    <p id="wrongLetters">Wrong: {{ game.lettersWrong }}</p>
    <p id="guessesLeft"><span id="guesses">{{ game.guessesLeft }}</span> guesses left!</p>
  </body>
</html>
